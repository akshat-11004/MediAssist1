<section class="section confirmation">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="confirmation-content text-center">
                    <i class="fa fa-check-circle fa-lg"></i>
                    <h2 class="mt-3 mb-4">Appointment: <%=id%></h2>
                    <p>Please find the attached details below:</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 mx-auto" data-aos="fade-up" data-aos-delay="200">
        <div class="icon-box">
            <h4>Name: <%=appointment.patient_name%></h4>
            <h5>Email: <%=appointment.email%></h5>
            <div class="row">
                <div class="card text-center p-4 mt-4 h5">
                    Date: <%=appointment.date%>
                </div>
                <div class="col-md-6 mx-auto">
                    <div class="card text-center p-4 h5">
                        <div class="h5 m-3">
                            Slot:
                        </div>
                        <div class="h5">
                            <h6>Start time: <%=appointment.start_time%></h6>
                            <h6>End time: <%=appointment.end_time%></h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card p-4 mt-4">
                <h4>Additional Information:</h4>
                <ul class="list-unstyled">
                    <li><strong>Height:</strong> <%=appointment.height%></li>
                    <li><strong>Weight:</strong> <%=appointment.weight%></li>
                    <li><strong>pending:</strong> <%=appointment.pending%></li>
                    <li><strong>Blood Group:</strong> <%=appointment.blood_group%></li>
                    <li><strong>Diseases:</strong> <%=appointment.diseases%></li>
                    <li><strong>Past History:</strong> <%=appointment.past_history%></li>
                    <li><strong>Contact:</strong> <%=appointment.contact%></li>
                    <form id="timeForm" action="/users/doctor/update-appointment/<%=id%>" method="post">
                        <div class="form-group my-2">
                            <label for="prescription">Prescription:</label>
                            <textarea class="form-control" id="prescription" name="prescription"
                                rows="4" placeholder="Enter your text here..."><%=appointment.prescription%></textarea>
                        </div>
                        <div>
                            <label for="pending">Pending:</label>
                            <div class="d-flex justify-content-between" id="pending">
                                <div>&nbsp;</div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="pending"
                                        id="pending" value="Y" <% if(appointment.is_pending === '1'){%> checked <%}%>>
                                    <label class="form-check-label" for="pending">
                                        Yes
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="pending"
                                        id="pending" value="N" <% if(appointment.is_pending === '0'){%> checked <%}%>>
                                    <label class="form-check-label" for="pending">
                                        No
                                    </label>
                                </div>
                                <div>&nbsp;</div>
                                <div>&nbsp;</div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success my-4" type="submit">Update</button>
                        </div>
                    </form>
                </ul>
            </div>
        </div>
    </div>
</section>
