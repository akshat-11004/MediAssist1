<link rel="stylesheet" href="/css/stocks.css">

<section class="intro">
    <div class="mask d-flex align-items-center h-100">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped mb-0">
                                    <thead class="text-center">
                                        <tr>
                                            <th scope="col" class="bg-success text-light">Reg. No.</th>
                                            <th scope="col" class="bg-success text-light">Name</th>
                                            <th scope="col" class="bg-success text-light">Email</th>
                                            <th scope="col" class="bg-success text-light">Specialization</th>
                                            <th scope="col" class="bg-success text-light">Contact</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <%doctors.forEach((doctor) => {%>
                                        <tr>
                                            <td><%=doctor.reg_no%></td>
                                            <td><%=doctor.name%></td>
                                            <td><%=doctor.email%></td>
                                            <td><%=doctor.specialization%></td>
                                            <td><%=doctor.contact%></td>
                                        </tr>
                                        <%});%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
